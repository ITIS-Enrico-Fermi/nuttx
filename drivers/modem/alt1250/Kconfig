#
# For a description of the syntax of this configuration file,
# see the file kconfig-language.txt in the NuttX tools repository.
#

menuconfig MODEM_ALT1250
	bool "ALT1250 modem support"
	default n
	select SPI
	select NET
	select NETDEV_MODEM_LTE_IOCTL
	---help---
		Enable driver for the ALT1250 modem.

if MODEM_ALT1250

config HAVE_SSLHANDLER
	bool "Use SSL handler"
	default n
	---help---
		Enable or disable compose/parse packt handler for SSL.

config HAVE_EXTHANDLER
	bool "Use extension handler"
	default n
	---help---
		Enable or disable compose/parse packt handler for extension.

config MODEM_ALT1250_DEBUG
	bool "Enable debug mode for ALT1250 modem driver"
	default n
	---help---
		Allow the ALT1250 modem driver print debug information.

endif
